@model List<MyPortfolio.Models.Entity.TblExpertiseItems>
@{
    ViewBag.Title = "Expertise Items";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

@* Add this style block in the same view (or move to your main stylesheet) *@
<style>
    .table {
        table-layout: fixed; /* prevents columns from auto-expanding */
        width: 100%;
    }

        .table td, .table th {
            word-wrap: break-word; /* wrap long words */
            white-space: normal; /* allow wrapping */
        }

    .desc-cell {
        max-width: 300px; /* adjust as needed */
    }
</style>
<div class="page-header">
    <div>
        <h2>@ViewBag.CardTitle - Maddeler</h2>
        <p>Bu karta ait maddeleri yönet.</p>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h2>Madde Listesi</h2>
        <a href="/Skill/AddItem?cardId=@ViewBag.CardId" class="btn btn-primary btn-sm">
            <i class="fa-solid fa-plus"></i> Yeni Madde
        </a>
    </div>

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th style="width:50px;">Id</th>
                    <th>Icon</th>
                    <th>Title</th>
                    <th>Description</th>
                    <th style="width:150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Id</td>
                        <td><i class="@item.IconClass"></i></td>
                        <td>@item.Title</td>
                        <td>@item.Description</td>
                        <td>
                            <a href="/Skill/EditItem/@item.Id" class="btn btn-sm btn-outline">Düzenle</a>
                            <a href="/Skill/DeleteItem/@item.Id" class="btn btn-sm btn-outline" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
    <div class="card-footer">
        <a href="/Skill/Index" class="btn btn-outline">Geri Dön</a>
    </div>
</div>
