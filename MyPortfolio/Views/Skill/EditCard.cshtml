@model MyPortfolio.Models.Entity.TblExpertiseCards
@{
    ViewBag.Title = "Kart Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Uzmanlık Kartını Düzenle</h2>
    </div>
</div>

<div class="card">
    <form method="post" class="form">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="Title" value="@Model.Title" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Subtitle</label>
            <input type="text" name="Subtitle" value="@Model.Subtitle" class="form-control" />
        </div>
        <div class="form-group">
            <label>Tag</label>
            <input type="text" name="Tag" value="@Model.Tag" class="form-control" />
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/Skill/Index" class="btn btn-outline">Vazgeç</a>
        </div>
    </form>
</div>
