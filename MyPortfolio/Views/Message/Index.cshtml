@model List<MyPortfolio.Models.Entity.TblMessages>
@{
    ViewBag.Title = "Messages";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Messages</h2>
        <p>Gelen mesajları buradan yönet.</p>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h2>Mesaj Listesi</h2>
    </div>

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th style="width:50px;">Id</th>
                    <th>Gönderen</th>
                    <th>Konu</th>
                    <th>Tarih</th>
                    <th>Durum</th>
                    <th style="width:150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr style="@(item.IsRead == true ? "" : "font-weight:bold; background-color:rgba(var(--primary-rgb), 0.05);")">
                        <td>@item.Id</td>
                        <td>@item.FullName</td>
                        <td>@item.Subject</td>
                        <td>@(item.SentDate.HasValue ? item.SentDate.Value.ToString("dd.MM.yyyy HH:mm") : "")</td>
                        <td>
                            @if (item.IsRead == true)
                            {
                                <span class="badge badge-success">Okundu</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Okunmadı</span>
                            }
                        </td>
                        <td>
                            <a href="/Message/Details/@item.Id" class="btn btn-sm btn-primary">Oku</a>
                            <a href="/Message/Delete/@item.Id" class="btn btn-sm btn-outline" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
