@model MyPortfolio.Models.Entity.TblFirst
@{
    ViewBag.Title = "Edit";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Hero İçeriğini Düzenle</h2>
    </div>
</div>

<div class="card">
    <form method="post" class="form">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label>Website Title</label>
            <input type="text" name="WebsiteTitle" value="@Model.WebsiteTitle" class="form-control" />
        </div>
        <div class="form-group">
            <label>Nav Title</label>
            <input type="text" name="NavTitle" value="@Model.NavTitle" class="form-control" />
        </div>
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="Title" value="@Model.Title" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Subtitle</label>
            <input type="text" name="Subtitle" value="@Model.Subtitle" class="form-control" />
        </div>
        <div class="form-group">
            <label>Subtitle 2</label>
            <input type="text" name="Subtitle2" value="@Model.Subtitle2" class="form-control" />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea name="Description" rows="4" class="form-control">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label>CV URL</label>
            <input type="text" name="CvUrl" value="@Model.CvUrl" class="form-control" />
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/Feature/Index" class="btn btn-outline">Vazgeç</a>
        </div>
    </form>
</div>
