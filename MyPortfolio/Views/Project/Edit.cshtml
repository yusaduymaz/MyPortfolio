@model MyPortfolio.Models.Entity.TblProjects
@{
    ViewBag.Title = "Proje Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Projeyi Düzenle</h2>
    </div>
</div>

<div class="card">
    <form method="post" class="form">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="Title" value="@Model.Title" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Description</label>
            <textarea name="Description" rows="4" class="form-control">@Model.Description</textarea>
        </div>
        <div class="form-group">
            <label>Image URL</label>
            <input type="text" name="ImageUrl" value="@Model.ImageUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label>Github URL</label>
            <input type="text" name="GithubUrl" value="@Model.GithubUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label>Demo URL</label>
            <input type="text" name="DemoUrl" value="@Model.DemoUrl" class="form-control" />
        </div>
        <div class="form-group">
            <label>Created Date</label>
            <input type="date" name="CreatedDate" value="@(Model.CreatedDate.HasValue ? Model.CreatedDate.Value.ToString("yyyy-MM-dd") : "")" class="form-control" />
        </div>
        <div class="form-group">
            <label>Sort Order</label>
            <input type="text" name="SortOrder" value="@Model.SortOrder" class="form-control" />
        </div>
        <div class="form-group">
            <label>Situation (Durum Metni)</label>
            <input type="text" name="Situation" value="@Model.Situation" class="form-control" />
        </div>
        <div class="form-group">
            <label>
                @Html.CheckBoxFor(x => x.IsActive) Aktif mi?
            </label>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/Project/Index" class="btn btn-outline">Vazgeç</a>
        </div>
    </form>
</div>
