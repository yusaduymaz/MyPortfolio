@model List<MyPortfolio.Models.Entity.TblSocialMedia>
@{
    ViewBag.Title = "Social Media";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Social Media</h2>
        <p>Sosyal medya hesaplarını buradan yönet.</p>
    </div>
</div>

<div class="card">
    <div class="card-header">
        <h2>Hesap Listesi</h2>
        <a href="/SocialMedia/Add" class="btn btn-primary btn-sm">
            <i class="fa-solid fa-plus"></i> Yeni Hesap
        </a>
    </div>

    <div class="table-wrapper">
        <table class="table">
            <thead>
                <tr>
                    <th style="width:50px;">Id</th>
                    <th>Name</th>
                    <th>Icon</th>
                    <th>Url</th>
                    <th>Durum</th>
                    <th style="width:150px;">İşlemler</th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.SocialMediaID</td>
                        <td>@item.Name</td>
                        <td><i class="@item.Icon"></i></td>
                        <td><a href="@item.Url" target="_blank">Link</a></td>
                        <td>
                            @if (item.IsActive == true)
                            {
                                <span class="badge badge-success">Aktif</span>
                            }
                            else
                            {
                                <span class="badge badge-warning">Pasif</span>
                            }
                        </td>
                        <td>
                            <a href="/SocialMedia/Edit/@item.SocialMediaID" class="btn btn-sm btn-outline">Düzenle</a>
                            <a href="/SocialMedia/Delete/@item.SocialMediaID" class="btn btn-sm btn-outline" onclick="return confirm('Silmek istediğinize emin misiniz?');">Sil</a>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>
