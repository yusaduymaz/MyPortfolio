@model MyPortfolio.Models.Entity.TblCertificates
@{
    ViewBag.Title = "Sertifika Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Sertifikayı Düzenle</h2>
    </div>
</div>

<div class="card">
    <form method="post" class="form">
        @Html.HiddenFor(x => x.Id)
        <div class="form-group">
            <label>Title</label>
            <input type="text" name="Title" value="@Model.Title" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Institution</label>
            <input type="text" name="Institution" value="@Model.Institution" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Date</label>
            <input type="text" name="Date" value="@Model.Date" class="form-control" />
        </div>
        <div class="form-group">
            <label>Certificate Link</label>
            <input type="text" name="CertificateLink" value="@Model.CertificateLink" class="form-control" />
        </div>
        <div class="form-group">
            <label>Icon (FontAwesome)</label>
            <input type="text" name="Icon" value="@Model.Icon" class="form-control" />
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/Certificate/Index" class="btn btn-outline">Vazgeç</a>
        </div>
    </form>
</div>
