@model MyPortfolio.Models.Entity.TblSocialMedia
@{
    ViewBag.Title = "Yeni Hesap";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Yeni Sosyal Medya Hesabı</h2>
    </div>
</div>

<div class="card">
    <form method="post" class="form">
        <div class="form-group">
            <label>Name</label>
            <input type="text" name="Name" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Url</label>
            <input type="text" name="Url" class="form-control" required />
        </div>
        <div class="form-group">
            <label>Icon (FontAwesome)</label>
            <input type="text" name="Icon" class="form-control" />
        </div>
        <div class="form-group">
            <label>
                <input type="checkbox" name="IsActive" value="true" checked /> Aktif mi?
            </label>
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Kaydet</button>
            <a href="/SocialMedia/Index" class="btn btn-outline">Vazgeç</a>
        </div>
    </form>
</div>
