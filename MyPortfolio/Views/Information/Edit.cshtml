@model MyPortfolio.Models.Entity.TblInformation
@{
    ViewBag.Title = "Information Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Information Düzenle</h2>
    </div>
</div>

<div class="card">
    @using (Html.BeginForm("Edit", "Information", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            <label>Icon (FontAwesome)</label>
            @Html.TextBoxFor(x => x.Icon, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Title</label>
            @Html.TextBoxFor(x => x.Title, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Subtitle</label>
            @Html.TextBoxFor(x => x.Subtitle, new { @class = "form-control" })
        </div>
        <div class="form-group">
            <label>Button Text</label>
            @Html.TextBoxFor(x => x.Button, new { @class = "form-control" })
        </div>
        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/Information/Index" class="btn btn-outline">Vazgeç</a>
        </div>
    }
</div>