@model MyPortfolio.Models.Entity.TblAdmins
@{
    ViewBag.Title = "Admin Düzenle";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<div class="page-header">
    <div>
        <h2>Admin Düzenle</h2>
    </div>
</div>

<div class="card">
    @using (Html.BeginForm("Edit", "Admins", FormMethod.Post))
    {
        @Html.AntiForgeryToken()
        @Html.HiddenFor(x => x.Id)

        <div class="form-group">
            <label>Email</label>
            @Html.TextBoxFor(x => x.Email, new { @class = "form-control", type = "text", required = "required" })
        </div>

        <div class="form-group">
            <label>Password</label>
            @Html.TextBoxFor(x => x.Password, new { @class = "form-control", type = "text", required = "required" })
        </div>

        <div class="form-actions">
            <button type="submit" class="btn btn-primary">Güncelle</button>
            <a href="/Admins/Index" class="btn btn-outline">Vazgeç</a>
        </div>
    }
</div>